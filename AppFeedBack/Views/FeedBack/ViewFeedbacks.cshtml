@using PagedList.Mvc
@using AppFeedBack.ViewModels
@model IndexViewModel

<h2>Отзывы пользователей</h2>

<div class="row">
    <div class="col-md-8">
        <div class="form-inline">
            @using (Html.BeginForm("ViewFeedbacks", "FeedBack", FormMethod.Get))
            {
                @Html.TextBox("filter", Model.Filter, new { @class = "form-control" })
                var selectList = from item in Model.CategoryList
                    select new SelectListItem {Text = item.Name, Value = item.Id == Guid.Empty ? "" : item.Name};
                @Html.DropDownList("category", selectList, new { @class = "form-control" })
                <input type="submit" class="btn btn-default" value="Поиск" />
            }
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-10">

        <div class="feedback-wrapper">

            @if (Model != null && Model.Feedbacks.Any())
            {
                foreach (var item in Model.Feedbacks)
                {
                    <div class="feedback-block">

                        <div class="feedback-head-block">
                            <div>
                                <span>Автор: @Html.ActionLink(item.Author ?? "Не указан", "ViewFeedbacks", new {filter = item.Author ?? ""})</span>
                            </div>

                            <span>Отправлен: @Html.DisplayFor(t => item.PostDate)</span>
                            <span>В категории: @Html.ActionLink(item.Category, "ViewFeedbacks", new {category = item.Category})</span>
                        </div>

                        <div class="feedback-text-block">
                            <p class="text-justfy">
                                @Html.DisplayFor(t => item.Text)
                            </p>
                        </div>

                    </div>
                }
            }

        </div>

        <div>

            @Html.ActionLink("Написать отзыв", "StoreFeedback", "FeedBack", null, new {@class = "btn btn-default"})

        </div>

        <div class="btn-group">
            @Html.PagedListPager(Model.Feedbacks, page => Url.Action("ViewFeedbacks", new { filter = Model.Filter, category = Model.Category, page }))
        </div>

    </div>

</div>



