@using AppFeedBack.ViewModels
@model FeedbackViewModel

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("CreateFeedback", "FeedBack", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h2>Оставьте отзыв</h2>

            <div class="form-horizontal">

                <div class="form-group">
                    <textarea name="Text" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label class="input-box">
                        <span class="input-btn">Загрузить файл</span>
                        <input type="file" name="File">
                    </label>
                </div>

                <div class="form-group">
                    @Html.Label("Выберите категорию")
                    @Html.DropDownListFor(t => Model.Category, Model.Categories, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn btn-default" />
                </div>

            </div>
        }
    </div>
</div>



